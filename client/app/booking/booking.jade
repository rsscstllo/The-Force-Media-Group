.container
  form(ng-submit="submit()" ng-controller="BookingCtrl" )
    .form-group
      label(for="Name") Name/Organization *
      input.form-control(type="text", name="Name", ng-model="BookingCtrl.propName")
    .form-group
      label(for="Email") Contact Email *
      input.form-control(type="email", name="Email", ng-model="BookingCtrl.email")
    .form-group
      label(for="Phone") Contact Phone *
      input.form-control(type="tel", name="Phone", ng-model="BookingCtrl.phoneNum")
    .form-group
      label(for="Date") Event MM/DD/YYYY HH:MM PM/AM *
      input.form-control(type="datetime-local", name="Date", ng-model="BookingCtrl.eventDate")
    .form-group
      label(for="Type") Type of Event * &nbsp;
      br
      select(name="Type", ng-model="BookingCtrl.eventType")
        option(value="Speaking") Speaking
        option(value="Music") Music
    .form-group
      label(for="Description") Event Description *
      textarea.form-control(name="Description", rows="3", ng-model="BookingCtrl.descript")
    br
    input(type="submit" value="Submit")

footer
